%nav.navbar.navbar-expand-lg.navbar-light.fixed-top.header
  .container
    %a.navbar-brand{:href => root_path}
      .logo-wrapper
        = image_tag 'logo.png', alt: 'WeRide'
    %button.navbar-toggler{"aria-controls" => "navbarNavAltMarkup", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarNavAltMarkup", "data-toggle" => "collapse", :type => "button"}
      %span.navbar-toggler-icon
    / #navbarNavAltMarkup.collapse.navbar-collapse.justify-content-start
    /   %nav.navbar.navbar-light.bg-light.justify-content-start
    /     %form.form-inline
    /       %input.form-control.mr-sm-2{"aria-label" => "Search", :placeholder => "Search", :type => "search"}/
    /       %button.btn.btn-outline-success.my-2.my-sm-0{:type => "submit"} Search

    #navbarNavAltMarkup.collapse.navbar-collapse.justify-content-end
      %ul.navbar-nav
        - if member_signed_in?
          %li.nav-item.dropdown
            %a#hostMenuDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              Host
            .dropdown-menu{"aria-labelledby" => "hostMenuDropdown"}
              - if current_member.host?
                %a.dropdown-item{:href => host_schedule_path} Schedule
                %a.dropdown-item{:href => host_activities_path} Activities
                .dropdown-divider
                %a.dropdown-item{:href => host_payout_infos_path} Payout Method
                %a.dropdown-item{:href => host_invoices_path} Invoice
              - else
                %a.dropdown-item{:href => new_member_guide_path} Learn about hosting
                %a.dropdown-item{:href => host_activities_path} Activities

          %li.nav-item.dropdown
            %a#myMenuDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              Me
            .dropdown-menu{"aria-labelledby" => "myMenuDropdown"}
              %a.dropdown-item{:href => edit_member_registration_path} Profile
              %a.dropdown-item{:href => my_page_reservations_path} Reservations
              .dropdown-divider
              %a.dropdown-item{:href => destroy_member_session_path, "data-method" => "delete"} Sign Out
        - else
          %li.nav-item
            %a.nav-link{href: new_member_session_path} Sign In
          %li.nav-item
            %a.nav-link{href: new_member_registration_path} Register